<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Subscription</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-dark text-light">
    <%- include('../partials/navbar') %>
    <div class="container mt-4">
        <h1 class="mb-4">Add Subscription</h1>

        <form action="/subscriptions" method="post" class="row g-3">
            <div class="col-md-6">
                <label for="name" class="form-label">Subscription Name</label>
                <input type="text" name="subName" id="name" class="form-control bg-dark text-light border-secondary" required>
            </div>

            <div class="col-md-6">
                <label for="Category" class="form-label">Category</label>
                <select name="subCategory" id="Category" class="form-select bg-dark text-light border-secondary" required>
                    <option disabled selected>Select Category</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Fitness & Health">Fitness & Health</option>
                    <option value="E-Commerce">E-Commerce</option>
                    <option value="Applications">Applications</option>
                </select>
            </div>

            <div class="col-md-6">
                <label for="price" class="form-label">Charge ($)</label>
                <input type="number" name="price" id="price" class="form-control bg-dark text-light border-secondary" required>
            </div>

            <div class="col-md-6">
                <label for="start-date" class="form-label">Start</label>
                <input type="date" name="startDate" id="start-date" class="form-control bg-dark text-light border-secondary" required>
            </div>

            <div class="col-md-6">
                <label for="end-date" class="form-label">Next Bill</label>
                <input type="date" name="endDate" id="end-date" class="form-control bg-dark text-light border-secondary" required>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-success">Add Subscription</button>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const chosenStartDate = document.getElementById("start-date")
        const chosenEndDate = document.getElementById("end-date")
        chosenStartDate.addEventListener("change", () => {
            chosenEndDate.min = chosenStartDate.value
        })
        chosenEndDate.addEventListener("change", () => {
            chosenStartDate.max = chosenEndDate.value
        })
    </script>
</body>
</html>
