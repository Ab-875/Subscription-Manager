<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <title>Categories</title>
</head>

<body class="bg-dark text-light">
    <%- include('../partials/navbar') %>

        <div class="container mt-4">
            <h2 class="mb-4">
                <%= foundSubscription.length> 0 ? foundSubscription[0].subCategory : "Category" %>
            </h2>

            <% let TotalPrice=0 %>

                <% if (foundSubscription.length===0) { %>
                    <p class="text-secondary">No Subscriptions</p>
                    <% } else { %>
                        <div class="row row-cols-1 row-cols-md-3 g-4">
                            <% foundSubscription.forEach((oneSubscription)=> { %>
                                <% TotalPrice +=oneSubscription.price %>
                                    <div class="col">
                                        <div class="card h-100 shadow-sm bg-secondary text-light border-light">
                                            <div class="card-body">
                                                <h5 class="card-title">
                                                    <%= oneSubscription.subName %>
                                                </h5>
                                                <p class="card-text">
                                                    <strong>Category:</strong>
                                                    <%= oneSubscription.subCategory %><br>
                                                        <strong>Price:</strong> $<%= oneSubscription.price %> USD<br>
                                                            <strong>Start:</strong>
                                                            <%= oneSubscription.startDate.toLocaleDateString("en-GB", {
                                                                day: "numeric" , month: "short" , year: "numeric" }) %>
                                                                <br>
                                                                <strong>Next Bill:</strong>
                                                                <%= oneSubscription.endDate.toLocaleDateString("en-GB",
                                                                    { day: "numeric" , month: "short" , year: "numeric"
                                                                    }) %>
                                                </p>
                                                <a href="/subscriptions/<%= oneSubscription._id %>"
                                                    class="btn btn-sm btn-outline-light">Details</a>
                                                <a href="/subscriptions/<%= oneSubscription._id %>/edit"
                                                    class="btn btn-sm btn-light text-dark">Edit</a>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                        </div>

                        <div class="mt-4 text-end">
                            <h5>Total: $<%= TotalPrice %> USD</h5>
                        </div>
                        <% } %>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>