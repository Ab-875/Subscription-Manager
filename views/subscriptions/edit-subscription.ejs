<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Subscription</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-dark text-light">
    <%- include('../partials/navbar') %>

        <div class="container mt-5">
            <h1 class="mb-4">Edit Subscription</h1>

            <form action="/subscriptions/<%= foundSubscription._id %>/edit" method="post" class="row g-3">

                <div class="col-md-6">
                    <label for="name" class="form-label">Subscription Name</label>
                    <input type="text" name="subName" id="name" class="form-control bg-dark text-light border-light"
                        value="<%= foundSubscription.subName %>" required>
                </div>

                <div class="col-md-6">
                    <label for="Category" class="form-label">Category</label>
                    <select name="subCategory" id="Category" class="form-select bg-dark text-light border-light"
                        required>
                        <option disabled>Select Category</option>
                        <option value="Entertainment" <%=foundSubscription.subCategory==="Entertainment" ? "selected"
                            : "" %>>Entertainment</option>
                        <option value="Fitness & Health" <%=foundSubscription.subCategory==="Fitness" ? "selected" : ""
                            %>>Fitness & Health</option>
                        <option value="E-Commerce" <%=foundSubscription.subCategory==="E-Commerce" ? "selected" : "" %>
                            >E-Commerce</option>
                        <option value="Applications" <%=foundSubscription.subCategory==="Applications" ? "selected" : ""
                            %>>Applications</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="price" class="form-label">Charge ($)</label>
                    <input type="number" name="price" id="price" class="form-control bg-dark text-light border-light"
                        value="<%= foundSubscription.price %>" required>
                </div>

                <div class="col-md-6">
                    <label for="start-date" class="form-label">Start</label>
                    <input type="date" name="startDate" id="start-date"
                        class="form-control bg-dark text-light border-light" value="<%= foundSubscription.startDate.toISOString().split('T')[0] %>"
                        required>
                </div>

                <div class="col-md-6">
                    <label for="end-date" class="form-label">Next Bill</label>
                    <input type="date" name="endDate" id="end-date" class="form-control bg-dark text-light border-light"
                        value="<%= foundSubscription.endDate.toISOString().split('T')[0] %>" required>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-outline-light">Edit Subscription</button>
                </div>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
        const chosenStartDate = document.getElementById("start-date")
        const chosenEndDate = document.getElementById("end-date")
        chosenStartDate.max = chosenEndDate.value
        chosenEndDate.min = chosenStartDate.value
        chosenStartDate.addEventListener("change", () => {
            chosenEndDate.min = chosenStartDate.value
        })
        chosenEndDate.addEventListener("change", () => {
            chosenStartDate.max = chosenEndDate.value
        })
    </script>
</body>

</html>